---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Ofertas Especiales | Nexo Streetwear',
  description: 'Descuentos especiales en ropa de moda para toda la familia.',
};

const productosEnOferta = [
  {
    nombre: 'Buzo Nexo Streetwear',
    precioOriginal: 'L. 850',
    precioOferta: 'L. 450',
    descuento: '47% OFF',
    img: 'https://mdcardenas.github.io/Imagenes_Sistemas_Expertos/Tienda de Ropa/Catalogo/Buzo.png',
  },
  {
    nombre: 'Sudadera Nexo Streetwear',
    precioOriginal: 'L. 1,200',
    precioOferta: 'L. 750',
    descuento: '35% OFF',
    img: 'https://mdcardenas.github.io/Imagenes_Sistemas_Expertos/Tienda de Ropa/Catalogo/Sudadera.png',
  },
  {
    nombre: 'Camisa Nexo Streetwear',
    precioOriginal: 'L. 1,500',
    precioOferta: 'L. 900',
    descuento: '40% OFF',
    img: 'https://mdcardenas.github.io/Imagenes_Sistemas_Expertos/Tienda de Ropa/Catalogo/Camisa.png',
  },
];
---

<Layout metadata={metadata}>
  <section class="max-w-7xl mx-auto py-16 px-4">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-extrabold text-orange-600 mb-4">Â¡OFERTAS DIARIAS!</h1>
      <h1 class="text-3xl text-white">Aprovecha los descuentos exclusivos.</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {productosEnOferta.map((item) => (
        <div class="group border rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all bg-black">
          
          {/* Contenedor de imagen relativo */}
          <div class="relative h-80 overflow-hidden">
            
            
            <span class="absolute top-4 left-4 bg-orange-500 text-black px-3 py-1 rounded-full text-sm font-bold z-20 shadow-lg">
              {item.descuento}
            </span>
            
            <img 
              src={item.img} 
              alt={item.nombre} 
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
            />
            <div class="absolute inset-0 bg-black/5 group-hover:bg-transparent transition-colors"></div>
          </div>

          <div class="p-6">
            <h2 class="text-2xl font-bold mb-2">{item.nombre}</h2>
            <div class="flex items-center gap-3 mb-6">
              <span class="text-white line-through text-lg">{item.precioOriginal}</span>
              <span class="text-orange-600 text-3xl font-black">{item.precioOferta}</span>
            </div>
            
            <button class="w-full bg-orange-500 hover:bg-orange-600 text-black font-bold py-3 rounded-xl transition-colors">
              Comprar Ahora
            </button>
          </div>
        </div>
      ))}
    </div>
  </section>
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Ver Catalogo',
        href: getPermalink('/homes/catalogo'),
        icon: 'tabler:shopping-cart',
      },
    ]}
    classes={{ actions: 'bg-orange-500 shadow-orange-500/50 border-none' }}
  >
    <Fragment slot="title">
      Explora Nuestro Catalogo Completo<br class="block sm:hidden" />
  </CallToAction>
</Layout>